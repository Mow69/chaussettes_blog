{% extends 'base.html.twig' %}

{% block title %}Sock index{% endblock %}

{% block body %}
    <h1>Sock index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Type</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for sock in socks %}
            <tr>
                <td>{{ sock.id }}</td>
                <td>{{ sock.name }}</td>
                <td>{{ sock.type }}</td>
                <td>
                    <a href="{{ path('sock_show', {'id': sock.id}) }}">show</a>
                    <a href="{{ path('sock_edit', {'id': sock.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('sock_new') }}">Create new</a>
{% endblock %}
